<% content_for :sidebar do %>
    <%= render :partial => 'businesses/edit_sidebar' %>
<% end %>

<h3>Tag</h3>
<p>Name: <%= @tag.name %></p>
<% if can?(:read, Admpart) %>
  <% if @tag.root? %>
  <p>Section: <%= @tag.admpart_section %></p>
  <% end %>
  <% unless @tag.system_name.blank? %>
  <p>system name: <%= @tag.system_name %></p>
  <% end %>
<% end %>

<table class="table table-striped table-hover table-condensed table-bordered">
  <thead>
    <tr>
      <% @totals.each_with_index do |t,i| %>
        <td>
          <%= l(@start_at + i.month, format: :month) %>
        </td>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @totals.each do |t| %>
        <td>
          <%= pm t %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_business_tag_path(@business, @tag) %> |
<%= link_to 'Back', business_tags_path(@business) %>
