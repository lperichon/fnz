<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0, shrink-to-fit=no">
    <meta name="robots" content="noindex">
    <title><%= content_for?(:title) ? yield(:title) : "" %></title>

    <script src="https://unpkg.com/stimulus@1.1.0/dist/stimulus.umd.js"></script>
    <!-- Bootstrap CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- Bootstrap JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    "receipts", :media => "all" %>
    <%= javascript_include_tag "receipts" %>

    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
  <div id="receipt-container" class="border rounded">
    <div id="receipt-header" class="rounded-top">
      <div class="text-center">
        <%= image_tag "logo_drm_2022_white.png", id: "logo" %>
      </div>
    </div>
    <div id="receipt-body" class="text-center mt-4">
      <%= yield %>
    </div>
  </div>
  </body>
</html>
