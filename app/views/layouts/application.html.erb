<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "" %> - FNZ - PADMA</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>

    <script src="https://unpkg.com/stimulus@1.1.0/dist/stimulus.umd.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mathjs/6.2.2/math.min.js"></script>
    <%= javascript_include_tag "application" %>

    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container-fluid">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <div id="main" role="main" data-controller="sidebar">
      <div class="container-fluid">
        <div class="content">
           <div class="row-fluid">
            <div class="span12">
              <%= render 'layouts/secondary_navigation' %>
              <%= render 'layouts/messages' %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span12">
              <%= yield(:top) %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span3" data-target="sidebar.sidebar">
              <%= yield :sidebar %>
            </div>
            <div class="span9" data-target="sidebar.body">
              <%= yield %>
            </div>
          </div>
          <%= yield(:bottom) %>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
    <%= render "layouts/support_button" %>
  </body>
</html>
