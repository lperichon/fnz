<div id="sale-stats-modal" class = "modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Sale Stats</h3>
  </div>
  <ul>
    <h4>Global</h4>
    <li>Total sales: $ <%= @stats.sales.inject(0) {|sum, sale| sum + sale.product.price} %></li>
  </ul>
  <ul>
  <% @business.agents.each do |agent| %>
    <li><%= agent.name %>: $ <%= @stats.sales.where('sales.agent_id' => agent.id).inject(0) {|sum, sale| sum + sale.product.try(:price)} %></li>

  <% end %>
  </ul>
  <div class="modal-footer">
    <%= link_to "Close", "#", :class => "btn", "data-dismiss" => "modal" %>
  </div>
</div>