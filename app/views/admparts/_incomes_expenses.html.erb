<!-- incomes n expenses start -->
<% i = 0 %>
<%= loop do %>
  <% income_tag = @adm.root_tags_for_section("income")[i] %>
  <% expense_tag = @adm.root_tags_for_section("expense")[i] %>
  <% i += 1 %>
  <% break if income_tag.nil? && expense_tag.nil? %>
  <tr>
    <td>
      <%= link_to_tag_detail(income_tag) if income_tag %>
    </td>
    <td>
      <%= pm(@adm.total_for_tag(income_tag)) if income_tag %>
    </td>
    <td>
      <%= link_to_tag_detail(expense_tag) if expense_tag %>
    </td>
    <td>
      <%= pm @adm.total_for_tag(expense_tag) if expense_tag %>
    </td>
  </tr>
<% end %>
<tr>
  <th><%= t(".total_income") %></th>
  <td><%= pm @adm.section_total("income") %></td>
  <th><%= t(".total_expense") %></th>
  <td><%= pm @adm.section_total("expense") %></td>
</tr>
<tr>
  <th><%= t(".profit") %></th>
  <td colspan="3"><%= pm @adm.profit %></td>
</tr>
<!-- incomes n expenses end -->
