<%= simple_form_for(@adm,
                    url: business_admpart_path(business_id: @adm.business_id)
                   ) do |f| %>
<table class="table table-striped table-hover table-condensed table-bordered">

  <thead>
    <tr>
      <th colspan="4"><%=  %></th>
    </tr>
    <tr>
      <th colspan="2"><%= t('.incomes') %></th>
      <th colspan="2"><%= t('.expenses') %></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td colspan="2">
        <%= f.input :installments_tag_id, as: :select, collection: @adm.business.tags.where(parent_id: nil) %>
      </td>
      <td rowspan="4" colspan="2">
          expense section
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= f.input :enrollments_tag_id, as: :select, collection: @adm.business.tags.where(parent_id: nil) %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <%= f.input :sales_tag_id, as: :select, collection: @adm.business.tags.where(parent_id: nil) %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        income section
      </td>
    </tr>
    <tr>
      <th><%= t(".total_income") %></th>
      <td></td>
      <th><%= t(".total_expense") %></th>
      <td></td>
    </tr>
    <tr>
      <th><%= t(".profit") %></th>
      <td colspan="3"></td>
    </tr>
      <tr>
        <th><%= f.input :director_from_profit_percentage, label: false %>% <%= t(".director_winnings") %></th>
        <td colspan="3"></td>
      </tr>
      <tr>
        <td colspan="2"></td>
        <td colspan="2">
          director_expenses section
        </td>
      </tr>
      <tr>
        <td colspan="2"></td>
        <th><%= t(".director_winnings") %></th>
        <td></td>
      </tr>
      <tr>
        <th><%= t(".subtotal") %></th>
        <td colspan="3"></td>
      </tr>
    <tr>
      <th><%= f.input :owners_percentage, label: false %>% <%= t(".owners_winnings") %></th>
      <td></td>
      <th>% <%= t(".team_winnings") %></th>
      <td></td>
    </tr>
    <tr>
      <td colspan="2">
        owners_expenses section
      </td>
      <td colspan="2">
        teams_expenses section
      </td>
    </tr>
    <tr>
      <th>
        <%= t(".owners_winnings") %>
      </th>
      <td> </td>
      <th>
        <%= t(".team_winnings") %>
      </th>
    </tr>
    <tr>
      <th>
        <%= f.input :dir_from_owners_aft_expses_percentage, label: false %>% <%= t(".director_winnings") %>
      </th>
      <td> </td>
      <td colspan="2"></td>
    </tr>
    <tr>
      <th>
        <%= t(".owners_winnings") %>
      </th>
      <td> </td>
      <td colspan="2"></td>
    </tr>

    <tr>
      <th colspan="4"><%= t(".installments") %></th>
    </tr>
    <tr>
      <th><%= t(".agent") %></th>
      <th><%= f.input :agent_installments_attendance_percentage %></th>
      <th></th>
    </tr>

    <tr><td colspan="4"></td></tr>
    <tr>
      <th colspan="4"><%= t(".enrollments") %></th>
    </tr>
    <tr>
      <th><%= t(".agent") %></th>
      <th><%= t(".enrollments_income") %></th>
      <th><%= f.input :agent_enrollment_income_percentage %></th>
      <th><%= f.input :agent_enrollment_quantity_fixed_amount %></th>
      <th></th>
    </tr>

    <tr><td colspan="4"></td></tr>
    <tr>
      <th colspan="4"><%= t(".sales") %></th>
    </tr>
    <tr>
      <th><%= t(".agent") %></th>
      <th><%= t(".sales_income") %></th>
      <th><%= f.input :agent_sale_percentage %></th>
      <th></th>
    </tr>
  </tbody>
</table>

<%= f.submit %>

<% @adm.wout_section_root_tags.each do |tag| %>
  <div data-tag-id="<%= tag.id %>" class="draggable-tag">
    <%= tag.name %>
  </div>
<% end %>

  <% Admpart::VALID_SECTIONS.each do |section_name| %>
    <hr>
    <div id="<%= section_name %>-section" class="droppable-section" data-section-name="<%= section_name %>" data-business-id="<%= @adm.business_id %>">
      drop here for <%= section_name %>
    </div>
    <div>
      <% @adm.root_tags_for_section(section_name).each do |tag| %>
        <div data-tag-id="<%= tag.id %>" class="draggable-tag">
          <%= tag.name %>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>

