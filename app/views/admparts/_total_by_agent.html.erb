<table class="table table-striped table-hover table-condensed table-bordered" id="admpart-total-by-agent">
<tr>
  <th colspan="5"><%= _("Total por instructor") %></th>
</tr>
<tr>
  <th><%= _("Instructor") %></th>
  <th><%= _("Distribución del lucro") %></th>
  <th><%= _("Ventas") %></th>
  <th><%= _("Matrículas") %></th>
  <th><%= _("Otros premios") %></th>
  <th><%= _("Total a retirar") %></th>
</tr>
<% @adm.team_members.each do |tm| %>
  <tr>
    <th><%= tm.name %></th>
    <td><%= pm @adm.agent_from_team_final_amount(tm) %></td>
    <td><%= pm @adm.agent_from_sales_total(tm) %></td>
    <td><%= pm @adm.agent_from_enrollments_total(tm) %></td>
    <td>
      <% cp = @adm.custom_prize_for("general",tm) %>
      <%= best_in_place cp, :amount, url: custom_prize_path(cp), display_with: lambda{|amount| pm(amount) } %>
    </td>
    <td><%= pm @adm.agent_total_winnings(tm) %></td>
  </tr>
<% end %>
</table>
