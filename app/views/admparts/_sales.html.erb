<table class="table table-striped table-hover table-condensed table-bordered">
<tr>
  <th colspan="4"><%= t(".sales") %></th>
</tr>
<tr>
  <th><%= t(".agent") %></th>
  <th><%= t(".sales_income") %></th>
  <th><%= t(".agent_comission") %></th>
</tr>
<% @adm.team_members.each do |tm| %>
  <tr>
    <th><%= tm.name %></th>
    <td><%= pm @adm.total_for_tag(@adm.sales_tag, tm.id) %></td>
    <td>
      <%= pm @adm.total_for_tag(@adm.sales_tag, tm.id) * (@adm.agent_sale_percentage || 0) / 100 %>
    </td>
  </tr>
<% end %>
<tr>
  <th><%= t(".no_teacher") %></th>
  <td><%= pm @adm.total_for_tag(@adm.sales_tag, "") %></td>
  <td></td>
</tr>
<tr>
  <th></th>
  <th><%= pm @adm.total_for_tag(@adm.sales_tag, nil, ignore_discounts: true) %></th>
  <th><%= pm @adm.sales_total_discount %></th>
</tr>
</table>
