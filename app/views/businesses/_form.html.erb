<%= simple_form_for(@business, :as => :business, :validate => true, :url => form_url, :html => {:class => "form-horizontal"}) do |f| %>
    <%= f.input :type, :collection => ["Personal", "School"], :as => :radio_buttons, :item_wrapper_class => 'inline' %>

    <%= f.input :name %>

    <%= f.button :submit, :class => "btn btn-primary" %>
<% end %>