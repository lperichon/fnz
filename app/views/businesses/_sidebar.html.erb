<% if @business.present? && @business.persisted? %>
<p><%= I18n.t('businesses.sidebar.title') %>
<% if can? :manage, @business.accounts.build %>
(<%= link_to t('businesses.sidebar.manage'), business_accounts_path(@business) %>)
<% end %>
:
<ul class="nav nav-pills nav-stacked">
  <li>
    <a title="<%= _("version de prueba - IGNORA DIFERENTES MONEDAS") %>">
      <%= _("Total") %>
      <%= number_to_currency( @business.accounts.inject(0){|acum,a| acum + a.balance } , unit: @business.currency_symbol) %>
    </a>
  </li>
  <% @business.accounts.order("name").each do |account| %>
  	<% unless account.new_record? %>
      <li class="<%= 'active' if @account.present? && account.id == @account.id %>">
        <%= link_to account.name.html_safe + content_tag(:span,
                                                         number_to_currency(account.balance, unit: account.currency.symbol), class: "balance pull-right account_#{account.id}_balance"),
                    business_account_transactions_path(@business, account) %>
      </li>
      <% end %>
  <% end %>
</ul>
</p>
<% end %>
