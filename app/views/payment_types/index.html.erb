<% content_for :sidebar do %>
  <%= render :partial => 'businesses/edit_sidebar' %>
<% end %>

<h3>Payment Types</h3>
<ul class="payment_types">
  <% @payment_types.each do |payment_type| %>
    <li>
      <b><%= payment_type.name %></b>
      (<i><%= payment_type.description %></i>)
      -
      <%= link_to 'Edit', edit_business_payment_type_path(@business, payment_type) %>
      <%= link_to 'Remove', business_payment_type_path(@business,payment_type), method: :delete, confirm: 'Are you sure?' %>
    </li>
  <% end %>
</ul>

<br />

<%= link_to 'New Payment Type', new_business_payment_type_path(@business) %>