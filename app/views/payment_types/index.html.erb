<% content_for :sidebar do %>
  <%= render :partial => 'businesses/edit_sidebar' %>
<% end %>

<h3>Payment Types</h3>
<table class="payment_types">
  <% @payment_types.each do |payment_type| %>
    <tr>
      <td>
        <b><%= payment_type.name %></b>
      </td>
      <td>
        (<i><%= payment_type.description %></i>)
      </td>
      <td>
        <%= link_to 'Edit', edit_business_payment_type_path(@business, payment_type), class: 'btn btn-mini' %>
        <%= link_to 'Remove', business_payment_type_path(@business,payment_type), method: :delete, confirm: 'Are you sure?', class: 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'New Payment Type', new_business_payment_type_path(@business) %>