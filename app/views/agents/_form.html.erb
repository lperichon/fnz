<%= simple_form_for(@agent, :validate => true, :url => form_url, :html => {:class => "form-horizontal"}) do |f| %>

    <%= f.input :name %>
    <% if @business.padma_id.present? %>
    	<%= f.input :padma_id, :as => :select, :collection => @padma_users.collect(&:username), :input_html => {'data-placeholder' => t('agents.form.padma_placeholder'), :class => "chosen"} %>
    <% else %>
    	<%= f.input :padma_id %>
    <% end %>    
    <%= f.button :submit, :class => "btn btn-primary" %>
<% end %>