<% content_for :sidebar do %>
    <%= render :partial => 'businesses/sidebar' %>
<% end %>

<h2>Membership</h2>
<p>Business: <%= @membership.business.name %></p>
<p>Contact: <%= @membership.contact.try(:name) %></p>
<p>Begins on: <%= @membership.begins_on %></p>
<p>Ends on: <%= @membership.ends_on %></p>
<h3>Enrollment</h3>
<% if @membership.enrollment %>
  <%= render :partial => 'enrollments/enrollment', :locals => {:enrollment => @membership.enrollment} %>
    <%= link_to 'Show', business_membership_enrollment_path(@business, @membership) %> |
    <%= link_to 'Edit', edit_business_membership_enrollment_path(@business, @membership) %> |
    <%= link_to 'Delete', business_membership_enrollment_path(@business, @membership), :confirm => 'Are you sure you want to delete this item?', :method => 'delete' %>
<% else %>
  <%= link_to "Create enrollment", new_business_membership_enrollment_path(@business, @membership) %>
<% end %>

<h3>Installments</h3>
<%= render :partial => 'installments/installments', :locals => {:installments => @membership.installments} %>

<%= link_to 'New Installment', new_business_membership_installment_path(@business, @membership) %> |
<%= link_to 'Edit', edit_business_membership_path(@business, @membership) %> |
<%= link_to 'Back',:back %>
